[giggle]
	compact-mode = true
	main-window-maximized = true
	main-window-geometry = 0x0+0+0

[user]
	name = Franco Risma
	email = <email>

[alias]
	co = checkout
	#ci = commit -a
	ci = commit
	st = status
	rank = shortlog -sn --no-merges
	ds = diff --stat
	dw = diff --word-diff

	# Complex aliases
	plog = log --graph --pretty='format:%C(red)%d%C(reset) %C(yellow)%h%C(reset) %ar %C(green)%aN%C(reset) %s'
    tlog = log --stat --since='1 Day Ago' --graph --pretty=oneline --abbrev-commit --date=relative
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

[mirror]
	summary = true

[apply]
	whitespace = nowarn

[color]
	branch = auto
	diff = auto
	status = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan
							
[push]
	default = simple
							
[core]
	editor = vim
